<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center"
    android:visibility="gone"
    android:id="@+id/lParentEmptyData"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <ImageView
        android:src="@drawable/ic_empty_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvTitleEmptyData"
        fontPath="fonts/open_sans_bold.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/margin15"
        android:layout_marginRight="@dimen/margin15"
        android:layout_marginTop="@dimen/margin25"
        android:gravity="center"
        android:text="@string/label_empty_data_title"
        android:textColor="@color/black"
        android:textSize="@dimen/text_semi_medium"
        tools:ignore="MissingPrefix"/>


    <TextView
        android:id="@+id/tvContentEmptyData"
        fontPath="fonts/open_sans_regular.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/margin25"
        android:layout_marginRight="@dimen/margin25"
        android:layout_marginTop="@dimen/margin10"
        android:gravity="center"
        android:text="@string/label_empty_data_content"
        android:textColor="@color/color_gray_title_add_dialog"
        android:textSize="@dimen/text_small_default"
        tools:ignore="MissingPrefix"/>

</LinearLayout>