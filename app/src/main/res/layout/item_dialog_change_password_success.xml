<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin35"
    android:layout_marginRight="@dimen/margin35"
    android:background="@drawable/bg_rounded_dialog"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitle"
        fontPath="fonts/open_sans_bold.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/margin15"
        android:layout_marginRight="@dimen/margin15"
        android:layout_marginTop="@dimen/margin35"
        android:gravity="center"
        android:text="@string/label_header_content_dialog_change_password1"
        android:textColor="@color/color_gray_title_add_dialog"
        android:textSize="@dimen/text_semi_large"
        tools:ignore="MissingPrefix"/>

    <TextView
        android:id="@+id/tvContentDialog"
        fontPath="fonts/open_sans_bold.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin5"
        android:layout_marginBottom="@dimen/margin5"
        android:layout_marginLeft="@dimen/margin15"
        android:layout_marginRight="@dimen/margin15"
        android:gravity="center"
        android:text="@string/label_header_content_dialog_change_password2"
        android:textColor="@color/color_gray_title_add_dialog"
        android:textSize="@dimen/text_semi_large"
        tools:ignore="MissingPrefix"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin25"
        android:layout_marginTop="@dimen/margin25"
        android:gravity="center"
        android:layout_marginRight="@dimen/margin20"
        android:layout_marginLeft="@dimen/margin20"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btnYa"
            fontPath="fonts/open_sans_bold.ttf"
            android:layout_width="wrap_content"
            android:paddingRight="@dimen/margin60"
            android:paddingLeft="@dimen/margin60"
            android:layout_height="@dimen/margin45"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin10"
            android:layout_marginTop="@dimen/margin10"
            android:background="@drawable/bg_rounded_btn_scan_product"
            android:gravity="center"
            android:orientation="vertical"
            android:text="@string/label_ya"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/text_semi_medium"
            tools:ignore="MissingPrefix">

        </Button>

    </LinearLayout>

</LinearLayout>