<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lParentContent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_login"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layoutAnimation="@anim/layout_animation_float"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvHeader"
                    fontPath="fonts/open_sans_regular.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin35"
                    android:layout_marginRight="@dimen/margin35"
                    android:layout_marginTop="140dp"
                    android:focusableInTouchMode="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:text="@string/label_lupa_kata_sandi"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_huge2"
                    tools:ignore="MissingPrefix"/>

                <LinearLayout
                    android:layout_marginBottom="@dimen/margin15"
                    android:layout_marginLeft="@dimen/margin35"
                    android:layout_marginRight="@dimen/margin35"
                    android:layout_marginTop="@dimen/margin20"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvSubHeader1"
                        fontPath="fonts/open_sans_regular.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/label_header_forgot_pass_sub1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_semi_medium"
                        tools:ignore="MissingPrefix"/>

                    <TextView
                        android:layout_marginTop="@dimen/margin3"
                        android:id="@+id/tvSubHeader2"
                        fontPath="fonts/open_sans_regular.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/label_header_forgot_pass_sub2"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_semi_medium"
                        tools:ignore="MissingPrefix"/>

                </LinearLayout>




            </LinearLayout>


            <LinearLayout
                android:layoutAnimation="@anim/layout_animation_float"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                    android:layout_marginLeft="@dimen/margin35"
                    android:layout_marginRight="@dimen/margin35"
                    android:id="@+id/text_field_boxes5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin25"
                    app:counterTextColor="@color/colorAccent"
                    app:primaryColor="@color/colorAccent"
                    android:animateLayoutChanges="true"
                    android:background="@drawable/bg_rounded_login_edit_text"
                    app:secondaryColor="@color/colorAccent"
                    app:helperTextColor="@color/colorAccent"
                    app:labelText="@string/label_email_hint">

                    <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:textSize="@dimen/text_small"
                        android:textColorHint="@color/white"
                        android:textColor="@color/white"
                        android:maxLines="1"
                        app:prefixTextColor="@color/colorAccent"
                        app:suffixTextColor="@color/colorAccent" />


                </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>


                <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                    android:visibility="invisible"
                    android:layout_marginLeft="@dimen/margin35"
                    android:layout_marginRight="@dimen/margin35"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin25"
                    app:counterTextColor="@color/colorAccent"
                    app:primaryColor="@color/colorAccent"
                    android:animateLayoutChanges="true"
                    android:background="@drawable/bg_rounded_login_edit_text"
                    app:secondaryColor="@color/colorAccent"
                    app:helperTextColor="@color/colorAccent"
                    app:labelText="@string/label_password_hint">

                    <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"
                        android:textColorHint="@color/white"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_small"
                        android:maxLines="1"
                        app:prefixTextColor="@color/colorAccent"
                        app:suffixTextColor="@color/colorAccent" />
                </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>


