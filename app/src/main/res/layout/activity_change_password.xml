<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/lParentContent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_above="@+id/lBottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <include layout="@layout/toolbar"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    fontPath="fonts/open_sans_semibold.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin20"
                    android:layout_marginRight="@dimen/margin20"
                    android:layout_marginTop="@dimen/margin40"
                    android:text="@string/label_hint_password_saat_ini"
                    android:textColor="@color/color_tv_phone_number_profile"
                    android:textSize="@dimen/text_small"
                    tools:ignore="MissingPrefix"/>

                <EditText
                    android:id="@+id/etPasswordNow"
                    fontPath="fonts/open_sans_bold.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin20"
                    android:layout_marginRight="@dimen/margin20"
                    android:layout_marginTop="@dimen/margin10"
                    android:background="@color/transparent"
                    android:inputType="textPassword"
                    android:textSize="@dimen/text_default"
                    tools:ignore="MissingPrefix"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_view"
                    android:layout_marginLeft="@dimen/margin20"
                    android:layout_marginRight="@dimen/margin20"
                    android:layout_marginTop="@dimen/margin10"
                    android:background="@color/color_gray_border_dialog"/>


                <TextView
                    fontPath="fonts/open_sans_semibold.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin20"
                    android:layout_marginRight="@dimen/margin20"
                    android:layout_marginTop="@dimen/margin30"
                    android:text="@string/label_hint_password_baru"
                    android:textColor="@color/color_tv_phone_number_profile"
                    android:textSize="@dimen/text_small"
                    tools:ignore="MissingPrefix"/>

                <EditText
                    android:id="@+id/etPasswordNew"
                    fontPath="fonts/open_sans_bold.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin20"
                    android:layout_marginRight="@dimen/margin20"
                    android:layout_marginTop="@dimen/margin10"
                    android:background="@color/transparent"
                    android:inputType="textPassword"
                    android:textSize="@dimen/text_default"
                    tools:ignore="MissingPrefix"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_view"
                    android:layout_marginLeft="@dimen/margin20"
                    android:layout_marginRight="@dimen/margin20"
                    android:layout_marginTop="@dimen/margin10"
                    android:background="@color/color_gray_border_dialog"/>

                <TextView
                    fontPath="fonts/open_sans_semibold.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin20"
                    android:layout_marginRight="@dimen/margin20"
                    android:layout_marginTop="@dimen/margin30"
                    android:text="@string/label_hint_retype_password"
                    android:textColor="@color/color_tv_phone_number_profile"
                    android:textSize="@dimen/text_small"
                    tools:ignore="MissingPrefix"/>

                <EditText
                    android:id="@+id/etPasswordRetype"
                    fontPath="fonts/open_sans_bold.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin20"
                    android:layout_marginRight="@dimen/margin20"
                    android:layout_marginTop="@dimen/margin10"
                    android:background="@color/transparent"
                    android:inputType="textPassword"
                    android:textSize="@dimen/text_default"
                    tools:ignore="MissingPrefix"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_view"
                    android:layout_marginLeft="@dimen/margin20"
                    android:layout_marginRight="@dimen/margin20"
                    android:layout_marginTop="@dimen/margin10"
                    android:background="@color/color_gray_border_dialog"/>


            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:id="@+id/lBottom"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnSave"
            fontPath="fonts/open_sans_bold.ttf"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin50"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin20"
            android:layout_marginTop="@dimen/margin20"
            android:background="@drawable/bg_rounded_btn_scan_product"
            android:gravity="center"
            android:textAllCaps="false"
            android:orientation="vertical"
            android:paddingLeft="@dimen/margin65"
            android:paddingRight="@dimen/margin65"
            android:text="@string/label_simpan"
            android:textColor="@color/white"
            android:textSize="@dimen/text_medium"
            tools:ignore="MissingPrefix">

        </Button>


    </LinearLayout>

</RelativeLayout>