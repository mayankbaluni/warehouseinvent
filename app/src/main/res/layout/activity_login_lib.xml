<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lParentContent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_login"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layoutAnimation="@anim/layout_animation_float"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvHeader"
                        fontPath="fonts/open_sans_regular.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin35"
                        android:layout_marginTop="140dp"
                        android:layout_marginRight="@dimen/margin35"
                        android:gravity="center"
                        android:text="@string/label_login"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_huge2"
                        tools:ignore="MissingPrefix" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin35"
                        android:layout_marginTop="@dimen/margin20"
                        android:layout_marginRight="@dimen/margin35"
                        android:layout_marginBottom="@dimen/margin15"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvSubHeader"
                            fontPath="fonts/open_sans_regular.ttf"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/label_login_header_content"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_semi_medium"
                            tools:ignore="MissingPrefix" />

                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layoutAnimation="@anim/layout_animation_float"
                    android:orientation="vertical">


                    <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                        android:id="@+id/tfbEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin35"
                        android:layout_marginTop="@dimen/margin25"
                        android:layout_marginRight="@dimen/margin35"
                        android:animateLayoutChanges="true"
                        android:background="@drawable/bg_rounded_login_edit_text"
                        app:counterTextColor="@color/colorAccent"
                        app:helperTextColor="@color/colorAccent"
                        app:labelText="@string/label_email_hint"
                        app:primaryColor="@color/colorAccent"
                        app:secondaryColor="@color/colorAccent">

                        <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                            android:id="@+id/etEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:maxLines="1"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            android:textSize="@dimen/text_small"
                            app:prefixTextColor="@color/colorAccent"
                            app:suffixTextColor="@color/colorAccent" />


                    </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>


                    <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                        android:id="@+id/tfbPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin35"
                        android:layout_marginTop="@dimen/margin25"
                        android:layout_marginRight="@dimen/margin35"
                        android:animateLayoutChanges="true"
                        android:background="@drawable/bg_rounded_login_edit_text"
                        app:counterTextColor="@color/colorAccent"
                        app:helperTextColor="@color/colorAccent"
                        app:labelText="@string/label_password_hint"
                        app:primaryColor="@color/colorAccent"
                        app:secondaryColor="@color/colorAccent">

                        <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                            android:id="@+id/etPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:imeOptions="actionDone"
                            android:inputType="textPassword"
                            android:maxLines="1"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            android:textSize="@dimen/text_small"
                            app:prefixTextColor="@color/colorAccent"
                            app:suffixTextColor="@color/colorAccent" />
                    </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>


